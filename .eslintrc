{
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"linebreak-style": ["warn", "unix"],
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "avoid",
				"bracketSpacing": true,
				"printWidth": 120,
				"semi": true,
				"singleQuote": false,
				"tabWidth": 4,
				"useTabs": true
			}
		]
	}
}
